<h1><%= @category.name %></h1>

<h2>Recipes in this category:</h2>
<ul>
  <% @recipes.each do |recipe| %>
    <li>
      <%= recipe.name %>
      <%= link_to "Delete", category_bookmark_path(@category, recipe.bookmarks.find_by(category: @category)), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new recipe to this category", new_category_bookmark_path(@category) %>
